<project default="all" xmlns:j="jelly:core">

  <!-- Teensy modification of the default to add the jboss-web file -->
  <goal name="all:site-war" description="Create a WAR File from the generated site">
    <!--
    prereqs="site:init, site">
    -->
    <mkdir dir="${maven.docs.dest}/WEB-INF" />
    <copy todir="${maven.docs.dest}/WEB-INF" file="src/others/jboss-web.xml" />
    <war destfile="${maven.build.dir}/${site.war.name}"
      webxml="${plugin.resources}/web.xml">
      <fileset dir="${maven.docs.dest}" />
    </war>
  </goal>

</project>
